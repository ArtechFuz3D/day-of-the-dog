---
export interface Props {
  id: string;
  title: string;
}

const { title, id } = Astro.props;
---

<section
  id={id}
  class="flex scroll-mt-12 flex-col items-center gap-4 space-y-2"
>
  <div class="flex flex-col items-center gap-4">
    <slot name="eyebrow" />
    <h2
      class="gradient-text text-center font-extrabold tracking-widest text-7xl"
    >
      {title}
    </h2>
  </div>
  <p class="max-w-xl text-center font-bold text-xl">
    <slot name="lead" />
  </p>
  <slot />
</section>
