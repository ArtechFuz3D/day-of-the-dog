---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "Left Arrow",
    description:
      "Move Left",
    icon: "mdi:arrow-left",
  },
  {
    title: "Up Arrow",
    description:
      "Jump",
    icon: "mdi:arrow-up",
  },
  {
    title: "Right Arrow",
    description:
      "Move Right",
    icon: "mdi:arrow-right",
  },
  {
    title: "Space Bar",
    description:
      "Roll",
    icon: "mdi:button",
  },
  {
    title: "Down Arrow",
    description:
      "While In Air : Dive Attack",

      icon: "mdi:arrow-down",
  },
  {
    title: "Down Arrow",
    description:
      "While On Ground: Sit",
    icon: "mdi:arrow-down",
  },
];
---

<ContentSection title="About" id="features">
  <Fragment slot="lead">
    Day Of The Dog <span class="text-primary">2D Side Scrolling Game</span> 
    <span class="text-primary">Controls</span> 
    <!-- by <span class="text-primary">ArtechFuz3D</span> -->
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3 ">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
